@model eShopSolution.ViewModels.System.Users.DeleteUserRequest

@{
    ViewData["Title"] = "Xoá người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Xoá người dùng</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách</a>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input asp-for="Id" type="hidden" />
            <input type="submit" value="Xoá" class="btn btn-danger" />
        </form>
    </div>
</div>
